<h3 class="title">Edit Category</h3>
<%= form_for @category, :as => 'ticketing_project_categories', :url => project_ticketing_project_category_path(@project, ProjectCategory.first),:method => 'put', :remote => true do |f| %>
    <%= render :partial => 'ticketing_project_categories/form', :locals => { :f => f } %>
    <p class="buttons">
      <%= submit_tag 'Update', :name => nil %>
      <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
    </p>
<% end %>
